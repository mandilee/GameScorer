<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/snookerTableGreen</item>
    </style>

    <style name="Player">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">@dimen/player_name_margin</item>
        <item name="android:layout_marginRight">@dimen/player_name_margin</item>
    </style>

    <style name="Balls">
        <item name="android:layout_width">@dimen/ball_size</item>
        <item name="android:layout_height">@dimen/ball_size</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@color/snookerTableGreen</item>
        <item name="android:paddingTop">@dimen/ball_padding</item>
        <item name="android:paddingBottom">@dimen/ball_padding</item>
        <item name="android:layout_marginLeft">@dimen/ball_padding</item>
        <item name="android:layout_marginRight">@dimen/ball_padding</item>
    </style>

    <style name="WWrapHWrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="WMatchHWrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="WWrapHWrap.PlayerName">
        <item name="android:textSize">@dimen/player_name_size</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
    </style>

    <style name="WWrapHWrap.Score">
        <item name="android:textSize">@dimen/score_size</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
    </style>

    <style name="WWrapHWrap.BallInfo">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="Buttons" parent="@style/Widget.AppCompat.Button.Small">
        <item name="android:layout_height">48dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginEnd">6dp</item>
        <item name="android:layout_marginStart">6dp</item>
    </style>

    <style name="ResultBall">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="ResultPlayer">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="ResultPlayer.Title">
        <item name="android:textSize">24sp</item>
    </style>
</resources>
